  Input(    type      => 'date',
	          name      => 'expire',
            validate  => { onerror   => $lang{Err_due_date},
                           mandatory => 'false' },
            value     => $tv{end_year},
            show      => $lang{due_date});

  Input (   show      => 'Importo appalto',
            name      => 'amount',
            size      => 20,
            maxlen    => 30,
            type      => 'currency');
            
  Input(    type      => 'text',
            show      => 'Oggetto appalto',
            style     => 'width: 350px',
            name      => 'subject',
            size      => '50' );
            
  Input(    type      => 'text',
            show      => 'Descrizione attivit&agrave;',
            style     => 'width: 350px',
            name      => 'description',
            size      => '255' );
            
  Input(    type      => 'select',
            show      => 'Criterio di aggiudicazione',
            validate  => { mandatory => 'true' },
            zerovalue => 'true',
            name      => 'award_type',
            data      => \%IG::gare_award_type );            
            
  Input(    type      => 'select',
            show      => 'Tipo di procedura',
            validate  => { mandatory => 'true' },
            zerovalue => 'true',
            name      => 'procedure_type',
            data      => \%IG::gare_procedure_type );      
            
         Input(    type      => 'select',
            show      => 'Stato di avanzamento',
            validate  => { mandatory => 'true' },
            zerovalue => 'true',
            name      => 'progress_status',
            data      => \%IG::gare_progress_status );
            
  Input(    name      => 'duration',
            type      => 'text',
            style     => 'width:350;',
            maxlen    => 50,
            show      => 'Durata appalto');          
            
  Input(    name      => 'ranking',
            type      => 'text',
            style     => 'width:350;',
            maxlen    => 50,
            show      => 'Posizione in graduatoria');      
           
  Input(    name      => 'price_offered',
            type      => 'text',
            style     => 'width:350;',
            maxlen    => 50,
            show      => 'Prezzo/sconto offerto');
            
