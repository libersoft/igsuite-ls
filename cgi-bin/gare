            show      => 'Stazione appaltante' );
            
  Input(    show      => $lang{document_reference},
            name      => 'docref',
            type      => 'text',
            size      => 50,
            maxlen    => 255 );

#  Input(    type      => 'select',
#            show      => $lang{category},
#            validate  => { mandatory => 'true' },
#            zerovalue => 'true',
#            name      => 'category',
#            data      => \%IG::gare_category );

  Input(    type      => 'text',
            name      => 'days',
