  Input(    name      => 'insurance_expiration',
            type      => 'date',
            style     => 'width:350;',
            maxlen    => 50,
            show      => 'Scadenza polizza');  
            
  Input(    name      => 'insurance_amount',
            type      => 'text',
            style     => 'width:350;',
            maxlen    => 50,
            show      => 'Importo polizza');                          

  Input(    name      => 'npa',
            type      => 'text',
            style     => 'width:350;',
            maxlen    => 50,
